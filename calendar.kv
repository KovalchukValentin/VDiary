#:import FadeTransition kivy.uix.screenmanager.FadeTransition
<Button>
    font_size:"18dp"

<TextInput>
    font_size:"18dp"

<Label>
    font_size:"18dp"


<CalendarApp>
    title: "Calendar"
    icon: self.icon

<MainWindow>
    name: "month"

<SideBar>
    anim_type: 'fade_in'
    #'slide_above_anim'
    #'reveal_below_simple'

<Main_layout>
    orientation: "vertical"

<Day_of_month_layout>
    orientation: "vertical"

<Top_menu_layout>
    size_hint: (1, .2)

<Week_layout>
    size_hint: (1, .2)

<Bottom_layout>
    size_hint: (1, .2)

########################################################
<DayWindow>
    name: "day"

<Day_layout>
    orientation: "vertical"

<Day_topbar>
    size_hint: (1, .12)

<DayInfo>
    orientation: "vertical"

<Day_bottom_layout>
    size_hint: (1, .12)

#####################################################

<ChangeMonthWindow>
    name: "change_month"

<Change_month_layout>
    orientation: "vertical"

<ChangeYearWindow>
    name: "change_year"

<Change_year_layout>
    orientation: "vertical"
    size_hint_y: '15dp'
