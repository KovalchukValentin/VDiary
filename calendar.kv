<CalendarApp>
    title: "Calendar"
    icon: self.icon

<MainWindow>
    name: "month"

<Main_layout>
    orientation: "vertical"

<Top_menu_layout>
    size_hint: (1, .2)

<Week_layout>
    size_hint: (1, .2)

<Bottom_layout>
    size_hint: (1, .2)

<DayWindow>
    name: "day"

<Day_layout>
    orientation: "vertical"

<Day_topbar>
    size_hint: (1, .12)

<DayInfo>
    orientation: "vertical"

<Day_bottom_layout>
    size_hint: (1, .12)
<SideBar>
    anim_type: 'fade_in'
    #'slide_above_anim'
    #'reveal_below_simple'